{{!
  @template local_coursetransfer/new_origin_restore_course_step3_page

  Example context (json):

}}
<div class="local_coursetransfer" data-region="new_origin_restore_course_step3_page">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title, local_coursetransfer {{/str}}</h3>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}


        <p>{{#str}} step3_restore_desc, local_coursetransfer {{/str}}</p>

        {{> local_coursetransfer/components/course_details }}

        <h4 class="h4">{{#str}} step3_sections_title, local_coursetransfer {{/str}}</h4>

        <div class="sections-table">
            <div class="sections-table-header">
                <div class="ckeckbox"></div>
                <div class="section-data">{{#str}} step3_sections_table_name, local_coursetransfer {{/str}}</div>
                <div class="section-data">{{#str}} step3_sections_table_id, local_coursetransfer {{/str}}</div>
                <div class="section-data">{{#str}} step3_sections_table_number, local_coursetransfer {{/str}}</div>
            </div>
            {{#course.sections}}
                <div class="section-row" data-section-sectionname="{{sectionname}}"
                     data-section-sectionid="{{sectionid}}" data-section-sectionnum="{{sectionnum}}">
                    <div class="section-info">
                        <div class="ckeckbox"><input type="checkbox"></div>
                        <div class="section-data">{{sectionname}}</div>
                        <div class="section-data">{{sectionid}}</div>
                        <div class="section-data">{{sectionnum}}</div>
                    </div>
                    <!--Principio tabla actividades-->
                    <div class="center-div">
                        <div class="activities-table">
                            <div class="activities-table-header">
                                <div class="ckeckbox"></div>
                                <div class="activities-data">{{#str}} step3_activities_table_name, local_coursetransfer {{/str}}</div>
                                <div class="activities-data">{{#str}} step3_activities_table_type, local_coursetransfer {{/str}}</div>
                            </div>
                            {{#activities}}
                            <div class="activities-row" data-activity-cmid="{{cmid}}" data-activity-name="{{name}}" data-activity-modname="{{modname}}" data-activity-instance="{{instance}}">
                                <div class="ckeckbox"><input type="checkbox"></div>
                                <div class="activities-data">{{name}}</div>
                                <div class="activities-data">{{modname}}</div>
                            </div>
                            {{/activities}}
                        </div>
                    </div>
                    <!--Final tabla actividades-->
                </div>
            {{/course.sections}}
        </div>

    {{/ haserrors }}



    <div class="button-container">
        <a type="button" class="btn btn-dark" href="{{ table_url }}">{{#str}} steps_buttons_cancel, local_coursetransfer {{/str}}</a>
        <a type="button" class="btn btn-light" href="{{ back_url }}">{{#str}} steps_buttons_back, local_coursetransfer {{/str}}</a>
        <a type="button" class="btn btn-primary" data-action="next" href="{{ next_url }}">{{#str}} steps_buttons_next, local_coursetransfer {{/str}}</a>
    </div>

</div>
