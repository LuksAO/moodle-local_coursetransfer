{{!
  @template local_coursetransfer/components/stepbystep

  Example context (json):

}}
<div data-region="table_configuration_component">
    <button type="button" class="btn btn-light configuration" data-toggle="modal" data-target="#ModalConfiguration-{{ id }}">
        Detalles
    </button>
    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="ModalConfiguration-{{ id }}" tabindex="-1" role="dialog"
         aria-labelledby="ModalConfiguration-{{ id }}Title" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalConfiguration-{{ id }}LongTitle">Configuration</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{# course_new }}
                    <h5>{{#str}} restoretnewcourse, backup {{/str}}</h5>
                    {{/ course_new }}
                    {{^ course_new }}
                    <h5>{{#str}} restoretocurrentcourse, backup {{/str}}</h5>
                    <ul class="configuration-list">
                        <li class="configuration-group">
                            <div class="checkbox">
                                {{#destiny_merge_activities}}
                                <input class="configuration-checkbox" id="destiny_merge_activities" type="radio" disabled checked>
                                {{/destiny_merge_activities}}
                                {{^destiny_merge_activities}}
                                    <input class="configuration-checkbox" id="destiny_merge_activities" type="radio" disabled>
                                {{/destiny_merge_activities}}
                            </div>
                            <div class="config-info">
                                <div class="config-title">{{#str}} config_destiny_merge_activities, local_coursetransfer {{/str}}</div>
                                <div class="config-desc">{{#str}} config_destiny_merge_activities_desc, local_coursetransfer {{/str}}.</div>
                            </div>
                        </li>
                        <li class="configuration-group">
                            <div class="checkbox">
                                {{#destiny_remove_activities}}
                                    <input class="configuration-checkbox" id="destiny_remove_activities" type="radio" disabled checked>
                                {{/destiny_remove_activities}}
                                {{^destiny_remove_activities}}
                                    <input class="configuration-checkbox" id="destiny_remove_activities" type="radio" disabled>
                                {{/destiny_remove_activities}}
                            </div>
                            <div class="config-info">
                                <div class="config-title">{{#str}} config_destiny_remove_activities, local_coursetransfer {{/str}}</div>
                                <div class="config-desc">{{#str}} config_destiny_remove_groups_desc, local_coursetransfer {{/str}}</div>
                            </div>
                        </li>
                    </ul>
                    {{/ course_new }}
                    <h5>{{#str}} deleteindestiny, local_coursetransfer {{/str}}</h5>
                    <ul class="configuration-list">
                        <li class="configuration-group">
                            <div class="checkbox">
                                {{#destiny_remove_enrols}}
                                    <input class="configuration-checkbox" id="destiny_remove_enrols" type="checkbox" disabled checked>
                                {{/destiny_remove_enrols}}
                                {{^destiny_remove_enrols}}
                                    <input class="configuration-checkbox" id="destiny_remove_enrols" type="checkbox" disabled>
                                {{/destiny_remove_enrols}}
                            </div>
                            <div class="config-info">
                                <div class="config-title">{{#str}} config_destiny_remove_enrols, local_coursetransfer {{/str}}</div>
                                <div class="config-desc">{{#str}} config_destiny_remove_enrols_desc, local_coursetransfer {{/str}}</div>
                            </div>
                        </li>
                        <li class="configuration-group">
                            <div class="checkbox">
                                {{#destiny_remove_groups}}
                                    <input class="configuration-checkbox" id="destiny_remove_groups" type="checkbox" disabled checked>
                                {{/destiny_remove_groups}}
                                {{^destiny_remove_groups}}
                                    <input class="configuration-checkbox" id="destiny_remove_groups" type="checkbox" disabled>
                                {{/destiny_remove_groups}}
                            </div>
                            <div class="config-info">
                                <div class="config-title">{{#str}} config_destiny_remove_groups, local_coursetransfer {{/str}}</div>
                                <div class="config-desc">{{#str}} config_destiny_remove_groups_desc, local_coursetransfer {{/str}}</div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    div[data-region='table_configuration_component'] .modal-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        text-align: left;
    }
    div[data-region='table_configuration_component'] ul.configuration-list {
        list-style-type: none;
        padding: 0;
        width: 100%;
    }
    div[data-region='table_configuration_component'] li.configuration-group {
        display: flex;
        margin: 20px 0;
    }
    div[data-region='table_configuration_component'] div.checkbox {
        padding: 0 5%;
    }
    div[data-region='table_configuration_component'] div.config-title {
        padding-bottom: 5px;
        font-size: 14px;
        font-weight: 700;
    }
    div[data-region='table_configuration_component'] div.config-desc {
        padding-bottom: 5px;
        padding-right: 10px;
        font-size: 12px;
        font-weight: 400;
    }
    div[data-region='table_configuration_component'] input[type="checkbox"]:checked, input[type="checkbox"]:active, input[type="checkbox"]:disabled {
        box-shadow: none;
    }
</style>