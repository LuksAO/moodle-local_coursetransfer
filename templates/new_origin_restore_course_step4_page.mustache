            <span class="text-white course-id">ID: {{course.id}}</span>
        </div>
        <div class="course_details_body">
            <div class="row-1">
                <section>
                    <span class="section-tittle">{{#str}} step3_details_shortname, local_coursetransfer {{/str}}</span>
