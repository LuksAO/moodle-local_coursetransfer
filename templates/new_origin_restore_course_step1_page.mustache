<div class="local_coursetransfer" data-region="new_origin_restore_course_step1_page" data-nexturl="{{ next_url }}">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} step1_restore_desc, local_coursetransfer {{/str}}</p>

    {{{ form }}}

    <div class="alert alert-danger hidden" role="alert">
        Hello
