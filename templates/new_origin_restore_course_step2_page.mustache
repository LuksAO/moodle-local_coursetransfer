{{!
  @template local_coursetransfer/new_origin_restore_course_step2_page

  Example context (json):

}}
<div class="local_coursetransfer" data-region="new_origin_restore_course_step2_page">

    {{> local_coursetransfer/components/stepbystep }}

    <h3 class="h3">{{#str}} steps_restore_title, local_coursetransfer {{/str}}</h3>

    <p>{{#str}} step2_restore_desc, local_coursetransfer {{/str}}</p>

    {{# haserrors }}
        {{> local_coursetransfer/components/alert }}
    {{/ haserrors }}

    {{^ haserrors }}
        <h3 class="h2">{{#str}} step2_course_list, local_coursetransfer {{/str}}</h3>
        <table>
            <tr>
                <th></th>
                <th>{{#str}} step2_course_id, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_course_name, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_course_shortname, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_course_idnumber, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_course_categoryid, local_coursetransfer {{/str}}</th>
                <th>{{#str}} step2_course_categoryname, local_coursetransfer {{/str}}</th>
            </tr>
            {{# courses }}
                <tr>
                    <td><input type="checkbox"></td>
                    <td>{{ id }}</td>
                    <td>{{ fullname }}</td>
                    <td>{{ shortname }}</td>
                    <td>{{ idnumber }}</td>
                    <td>{{ categoryid }}</td>
                    <td>{{ categoryname }}</td>
                </tr>
            {{/ courses }}
        </table>
    {{/ haserrors }}

    <div class="button-container">
        <a type="button" class="btn btn-dark" href="{{ table_url }}">{{#str}} steps_buttons_cancel, local_coursetransfer {{/str}}</a>
        <a type="button" class="btn btn-light" href="{{ back_url }}">{{#str}} steps_buttons_back, local_coursetransfer {{/str}}</a>
        <button type="button" class="btn btn-primary" data-action="next" disabled>{{#str}} steps_buttons_next, local_coursetransfer {{/str}}</button>
    </div>

</div>
